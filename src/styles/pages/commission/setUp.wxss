/* fade */
.fade-enter-active,
.fade-leave-active {
  transition: opacity 0.28s;
}
.fade-enter,
.fade-leave-active {
  opacity: 0;
}
/* fade-transform */
.fade-transform-leave-active,
.fade-transform-enter-active {
  transition: all .5s;
}
.fade-transform-enter {
  opacity: 0;
  transform: translateX(-30px);
}
.fade-transform-leave-to {
  opacity: 0;
  transform: translateX(30px);
}
/* breadcrumb transition */
.breadcrumb-enter-active,
.breadcrumb-leave-active {
  transition: all .5s;
}
.breadcrumb-enter,
.breadcrumb-leave-active {
  opacity: 0;
  transform: translateX(20px);
}
.breadcrumb-move {
  transition: all .5s;
}
.breadcrumb-leave-active {
  position: absolute;
}
/*新拟态图标*/
.Neumorphism {
  transition: box-shadow 0.2s ease-in-out;
  box-shadow: 18px 18px 30px rgba(0, 0, 0, 0.1), -18px -18px 30px #ffffff;
}
.Neumorphism:hover {
  box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.1), 0px 0px 0px #ffffff, inset 18px 18px 30px rgba(0, 0, 0, 0.1), inset -18px -18px 30px #ffffff;
  transition: box-shadow 0.2s ease-in-out;
}
.sendSetting {
  padding: 20px;
}
.sendSetting .setContent {
  min-height: 500px;
  padding: 20px;
  box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1), -8px -8px 15px #ffffff;
  border-radius: 8px;
  background-color: #FFFFFF;
}
.sendSetting .setContent .setContainer {
  border-bottom: 1px solid #E6E6E6;
}
.sendSetting .setContent .setContainer .line-box {
  padding: 0 112px 0 42px;
  font-size: 14px;
  display: flex;
}
.sendSetting .setContent .setContainer .line-box .line-left {
  padding-top: 14px;
  height: 62px;
  width: 16%;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  padding-right: 14px;
  border-right: 1px solid #E6E6E6;
}
.sendSetting .setContent .setContainer .line-box .line-left span {
  display: block;
  margin-right: 6px;
}
.sendSetting .setContent .setContainer .line-box .line-right {
  padding-top: 10px;
  padding-left: 14px;
  width: 30%;
}
.sendSetting .setContent .setContainer .line-box .line-right > div:nth-child(2) {
  color: #bbb;
  font-size: 12px;
  margin-top: 10px;
}
.sendSetting .setContent .setContainer .line-box .line-right > div:nth-child(2):hover {
  color: #666666;
}
.sendSetting .setContent .setContainer .break {
  width: 100%;
  height: 1px;
  background-color: #E6E6E6;
  display: block;
}
